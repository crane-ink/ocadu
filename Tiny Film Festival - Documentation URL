#include "TinyFilmFestival.h"
#include "HCSR04.h"
#include "fireS.h"  
#include "fireL.h"  

TinyFilmFestival film;

Animation idleAnim = fireS; 
Animation goAnim = fireL; 

int triggerPin = 14;          
int echoPin = 15;             
int maxDistance = 200;        
UltraSonicDistanceSensor distanceSensor(triggerPin, echoPin, maxDistance);

float distanceThreshold = 15; 
int sensorInterval = 200; 
unsigned long lastSensorRead = 0;
float currentDistance = 0.0;
bool isBigFire = false; 

void setup() 
{
    Serial.begin(9600);
    film.begin();
    film.startAnimation(idleAnim, LOOP); 
    Serial.println("ğŸ•¯ï¸");
}

void loop() 
{
    float distance = readDistance();
    
    if (distance >= 0) 
    {
        Serial.print("æ£€æµ‹è·ç¦»: ");
        Serial.print(distance);
        Serial.print(" cm, é˜ˆå€¼: ");
        Serial.println(distanceThreshold);

        if (distance < distanceThreshold && !isBigFire) 
        {
            film.startAnimation(goAnim, LOOP); // å¤§ç«è‹—
            isBigFire = true;
            Serial.println("ğŸ”¥");
        } 
        else if (distance >= distanceThreshold && isBigFire) 
        {
            film.startAnimation(idleAnim, LOOP); // å°ç«è‹—
            isBigFire = false;
            Serial.println("ğŸ•¯ï¸");
        }
    }
    
    film.update();
}

// è¯»å–è¶…å£°æ³¢ä¼ æ„Ÿå™¨æ•°æ®
float readDistance()
{
    unsigned long currentTime = millis();
    if (currentTime - lastSensorRead >= sensorInterval)
    {
        currentDistance = distanceSensor.measureDistanceCm();
        lastSensorRead = currentTime;
    }
    return currentDistance;
}
